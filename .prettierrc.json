{
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^react$",
    "<THIRD_PARTY_MODULES>",
    "^@config",
    "^@core",
    "^src/services",
    "^@utils",
    "^@assets/(.*)$",
    "^@hooks",
    "^@global",
    "^@empty-states",
    "^@ui/(.*)$",
    "^@common/(.*)$",
    "^@components/(.*)$",
    "^@.*-common/(.*)$",
    "^@.*-cards/(.*)$",
    "^@.*-modals/(.*)$",
    "^@.*-selects/(.*)$",
    "^@.*-forms/(.*)$",
    "^@.*-services/(.*)$",
    "^@.*-hooks/(.*)$",
    "^@features/(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true,
  "importOrderParserPlugins": ["typescript", "jsx", "tsx"]
}
