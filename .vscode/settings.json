{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.autoSave": "off",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.singleQuote": false,
  "prettier.semi": true,
  "prettier.trailingComma": "es5",
  "prettier.tabWidth": 2,
  "prettier.jsxSingleQuote": true,
  "prettier.arrowParens": "avoid",
  "explorer.excludeGitIgnore": false,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "files.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.turbo": true
  },
  "cSpell.words": [
    "additionalprops",
    "cloudinary",
    "Cloudinary",
    "clsx",
    "formik",
    "Formik",
    "headlessui",
    "heroicons",
    "juanperez",
    "produc",
    "producs",
    "reduxjs",
    "sonner",
    "tailwindcss",
    "uvcanvas",
    "Velustro",
    "Vist",
    "webp"
  ]
}
